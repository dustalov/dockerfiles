FROM alpine

MAINTAINER Dmitry Ustalov <dmitry.ustalov@gmail.com>

ENV BUNDLE_DISABLE_VERSION_CHECK=1 BUNDLE_VERSION=system JEKYLL_ENV=production RUBYOPT="--disable-did_you_mean"

RUN \
apk add --no-cache jekyll && \
gem install -N --conservative --minimal-deps jekyll-feed jekyll-seo-tag jekyll-sitemap && \
gem sources -c

CMD jekyll build -s jekyll -d _site
